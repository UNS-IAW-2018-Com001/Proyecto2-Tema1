{% extends 'layout.twig' %}

{% block body %}
       {% include "components/navegationBar.twig" %}
       <div class="panel panel-info" id="panelTOTAL">
           <div class="row">
               <div class="col-md-4" id="panelIzquierdo">
                   {% include "components/panelDeFitros.twig" %}
                   {% include "components/panelGruposYRamas.twig" %}
               </div>
               <div class="col-md-8" id="panelDerecho">
                   <div id="map" class=".col-md-8"></div>
                   <button type="button" class="btn btn-default .col-md-8" onclick="centrarLugares()" id="centrado">Centrar los grupos del Mapa</button>
               </div>
           </div>
           <div class="row" id="margen"><h1>   </h1></div>
           <div class="row info" id="PanelInformacion"   >
               <div class="panel panel-info" id="panelInfo">
                   {% include "components/panelInfoHead.twig" %}
                   <div class="panel-body" id="bodyinfo">
                       <dl id="boddy2"></dl>
                       {% include "components/panelImagenes.twig" %}
                       {% include "components/panelNuevoComentario.twig" %}
                       {% include "components/panelContenedorDeComentarios.twig" %}
                   </div>
               </div>
               <div id="right-panel"></div>
           </div>
       </div>




       {% block modalLogin %}
            <!-- Modal -->

           <div class="modal fade" id="elegantModalForm" role="dialog">
             <div class="modal-dialog">

               <!-- Modal content-->
               <div class="modal-content">
                 <div class="modal-header" style="padding:35px 50px;">
                   <button type="button" class="close" data-dismiss="modal">&times;</button>
                   <h4><span class=" glyp"></span> INICIAR SESION</h4>
                 </div>
                 <div class="modal-body" style="padding:40px 50px;">
                   <form role="form">
                     <div class="form-group">
                       <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
                       <input type="text" class="form-control" id="usrname" placeholder="Enter email">
                     </div>
                     <div class="form-group">
                       <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
                       <input type="text" class="form-control" id="psw" placeholder="Enter password">
                     </div>
                       <button type="submit" class="btn btn-success btn-block"><span class=" glyp"></span> Login</button>
                   </form>

                  <hr>
                   <p> Tambien puedes ingresa usando las redes sociales disponibles actualmente:</p>
                   <a href="/auth/twitter">
                   <button  type="button" class="btn btn-lg btn-fb waves-effect waves-light"><i class="fa fa-facebook pr-1"></i>twitter</button></a>

                 </div>
                 <div class="modal-footer">
                 </div>
               </div>

             </div>
           </div>

        {% endblock %}

{% endblock %}
